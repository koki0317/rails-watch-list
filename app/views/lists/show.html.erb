<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/originals/3b/ec/53/3bec532fff0c0bcd7f8becf11dd27962.png);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <div><%= link_to "Add a bookmark", new_list_bookmark_path(@list), class:"add-bookmark" %></div>
  </div>
</div>
<div class="container">
  <div class="card-container">
  <div class="cards-show">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card mb-3">
    <div class="row g-0 align-items-end h-100">
      <div class="col-md-4">
        <img src=<%= bookmark.movie.poster_url %> class="show-image" alt="">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text"><small class="text-muted"><%= bookmark.comment %></small></p>
          <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Delete #{bookmark.movie.title}?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
</div>
  <% end %>
  </div>
</div>
</div>
